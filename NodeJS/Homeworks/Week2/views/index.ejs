<%- include('partials/_header'); -%>

<body>

  <%- include('partials/_navigation'); -%>


  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg2.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Cleanest Blog</h1>
            <span class="subheading">A Blog Theme by Start Bootstrap & adjusted by Serhat Oner</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">

        <% for(let i =0; i < posts.length; i++) {%> 
        <div class="post-preview">
          <a href="/posts/<%=posts[i]._id%>"> <!--it is important to show individual blog posts.-->
            <h2 class="post-title">
              <%=posts[i].title%> <!--fetch the post title.-->
            </h2>
            <h3 class="post-subtitle">
              <%=posts[i].context%> <!--fetch the post context-->
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="#">Serhat Oner</a>
            on <%=posts[i].dateCreated.toDateString()%> </p>  <!--new Date().getFullYear()-->
        </div>
        <%} %>
       
        <!-- Pager -->
        <div class="clearfix">
          <% if(pages>0) { %>
              <% for(i =pages; i>=1; i--) { %>  
                <% if (i === current) { %>
                  <a class="btn btn-primary float-right" href="/?page=<%=i%>"><%=i%> &rarr;</a>
                <% } else if (i<pages) {%>
                  <a class="btn btn-primary float-right" href="/?page=<%=i%>"><%=i%> &rarr;</a>
                <%} else {%>
                  <a class="btn btn-primary float-right" href="/?page=<%=i%>"><%=i%> &rarr;</a>
                <%}%>
              <% } %>
          <% } %>
        </div>



      </div>
    </div>
  </div>

  <hr>
  <%- include('partials/_footer'); -%>

</body>

</html>
